{% include 'includes/header.twig' %}

<div class="container">

  <div class="page-header">
    <h1>Account <small>{{ account_name }}</small></h1>
  </div>
  
  <h2>Projects</h2>
  
  <table class="table table-condensed">
    <thead>
      <tr>
        <th class="actions">&nbsp;</th>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      {% for project in projects %}
        <tr>
          <td class="pull-right">
            <a href="{{ urlFor('project', {"accountid": account_id, "projectid": project['project']['id']}) }}" class="btn btn-info btn-mini"><i class="icon-time icon-white"></i>&nbsp;Time entries</a>
          </td>
          <td>
            {{ project['project']['name'] }}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

</div> <!-- /container -->

{% include 'includes/footer.twig' %}