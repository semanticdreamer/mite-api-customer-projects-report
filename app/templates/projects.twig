{% include 'includes/header.twig' %}

<div class="container">

  {% if account_id is defined and account_name is defined %}
    <ul class="breadcrumb">
      <li>
        <a href="{{ urlFor('account', {"accountid": account_id }) }}">Account home</a> <span class="divider">/</span>
      </li>
      <li class="active">Project list</li>
    </ul>
  {% endif %}

  <div class="page-header">
    <h1>Project list <small>{{ account_name }}</small></h1>
  </div>
  
  <table class="table table-condensed">
    <thead>
      <tr>
        <th class="actions">&nbsp;</th>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      {% for project in projects %}
        <tr>
          <td class="pull-right">
            <a href="{{ urlFor('project', {"accountid": account_id, "projectid": project['project']['id']}) }}" class="btn btn-info btn-mini"><i class="icon-time icon-white"></i>&nbsp;Time entries&nbsp;Â»</a>
          </td>
          <td>
            {{ project['project']['name'] }}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

</div> <!-- /container -->

{% include 'includes/footer.twig' %}