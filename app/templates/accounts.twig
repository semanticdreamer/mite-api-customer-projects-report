{% include 'includes/header.twig' %}

<div class="container">

  <!-- Main hero unit for a primary marketing message or call to action -->
  <div class="hero-unit">
    <h1>Hello!</h1>
    <blockquote class="pull-right">
      <p>A lot of work has already been done.</p>
      <small>{{ brand }}</small>
    </blockquote>
    <p>&nbsp;</p>
    <div class="btn-group">
      <a class="btn btn-primary btn-large dropdown-toggle" data-toggle="dropdown" href="#">
        <i class="icon-briefcase icon-white"></i>&nbsp;Accounts
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        {% for accountid, account in accounts %}
          <li><a href="{{ urlFor('account', {"accountid": accountid }) }}">{{ account['mite_customer_name'] }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="page-header">
    <h1>Accounts <small>{{ brand }}</small></h1>
  </div>
  
  <table class="table table-condensed">
    <thead>
      <tr>
        <th class="actions">&nbsp;</th>
        <th><i class="icon-briefcase"></i>&nbsp;Account Name (mite. Customer)</th>
        <th><i class="icon-user"></i>&nbsp;Username</th>
        <th><i class="icon-lock"></i>&nbsp;Password</th>
        <th><i class="icon-bullhorn"></i>&nbsp;Informal Salutation</th>
      </tr>
    </thead>
    <tbody>
      {% for accountid, account in accounts %}
        <tr>
          <td class="pull-right">
            <a href="{{ urlFor('account', {"accountid": accountid }) }}" class="btn btn-info btn-mini"><i class="icon-briefcase icon-white"></i>&nbsp;Account info&nbsp;Â»</a>
          </td>
          <td>
            {{ account['mite_customer_name'] }}
          </td>
          <td>
            {{ accountid }}
          </td>
          <td>
            {{ account['password'] }}
          </td>
          <td>
            {{ account['informal_salutation'] }}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  {% include 'includes/copyright.twig' %}

</div> <!-- /container -->

{% include 'includes/footer.twig' %}