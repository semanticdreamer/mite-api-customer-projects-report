{% include 'includes/header.twig' %}
<div class="page-header">
  <h1>Accounts <small>{{ brand }}</small></h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    {% for accountid, account in accounts %}
      <tr>
        <td>
          <a href="{{ urlFor('account', {"accountid": accountid }) }}">
            <abbr title="{{ accountid }}">{{ account['mite_customer_name'] }}</a>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

{% include 'includes/footer.twig' %}